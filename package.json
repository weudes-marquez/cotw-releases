{
  "name": "cotwgrindcounter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:first": "vite build --mode development && vite",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:check": "tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "vite",
    "release:patch": "npm version patch && yarn build",
    "release:minor": "npm version minor && yarn build",
    "release:major": "npm version major && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/weudes/cotw-always-ontop"
  },
  "build": {
    "appId": "com.cotwpinplanner.grindcounter",
    "productName": "COTW Grind Counter",
    "executableName": "cotwgrindcounter",
    "publish": [
      {
        "provider": "github",
        "owner": "weudes-marquez",
        "repo": "cotw-releases"
      }
    ],
    "directories": {
      "output": "release"
    },
    "icon": "build/icon.ico",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "build/icon.ico"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "COTW Grind Counter"
    }
  },
  "description": "A grind counter for theHunter: Call of the Wild",
  "author": "Pin Planner",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dexie": "^4.0.11",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "firebase": "^12.6.0",
    "lucide-react": "^0.554.0",
    "koffi": "^2.9.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "firebase-admin": "^13.6.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}